<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherWise.Views.SignupPage"
             Title="WeatherWise Signup"
             BackgroundColor="White">
     <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="20,0,20,0">
        <Entry Placeholder="Username" Text="{Binding MyLoginRequestModel.UserName}" TextColor="Black"></Entry>
        <Entry Placeholder="Password" Text="{Binding MyLoginRequestModel.Password}" TextColor="Black" IsPassword="True"></Entry>
        <Button Text="Sign up" BackgroundColor="OrangeRed" TextColor="Black" Command="{Binding SignupCommand}"></Button>
        <Label Text="Already have an account? Login"
               TextColor="Black"
               FontSize="18"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center"
                Margin="0, 20, 0, 0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding LogInUser}" />
            </Label.GestureRecognizers>
        </Label>
    </VerticalStackLayout>
</ContentPage>
