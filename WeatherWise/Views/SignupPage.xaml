<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherWise.Views.SignupPage"
             Title="SignupPage"
             BackgroundColor="Black">
     <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="20,0,20,0">
        <Entry Placeholder="Username" Text="{Binding MyLoginRequestModel.UserName}"></Entry>
        <Entry Placeholder="Password" Text="{Binding MyLoginRequestModel.Password}"></Entry>
        <Button Text="Sign up" BackgroundColor="Red" TextColor="White" Command="{Binding LoginCommand}"></Button>
         <Label x:Name="label"
               Text="Already have an account? Login"
               TextColor="white"
               FontSize="18"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center"
                Margin="0, 20, 0, 0"/>
    </VerticalStackLayout>
</ContentPage>
